<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Event Management App</title>
</head>

<body>
  <%- include('./partials/navbar') %>
    <div class="container">
      <br>
      <div class="text-center">
        <h2>Events</h2>
      </div>
      <br>

      <table class="table table-hover small text-center">
        <thead>
          <tr>
            <th width="150">Event Title</th>
            <th width="300">Event Image</th>
            <th width="300">Description</th>
            <th width="150">Start Date</th>
            <th width="150">End Date</th>
            <th width="150">Location</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < eventmanagementapp.length; i++) { %>
            <tr>
              <td><a href="/event/<%= eventmanagementapp[i].Event_ID %>">
                  <%= eventmanagementapp[i].Title %>
                </a></td>
              <td><img src="../images/<%= eventmanagementapp[i].Image %>" width="80%"></td>
              <td>
                <%= eventmanagementapp[i].Description %>
              </td>
              <td>
                <%= eventmanagementapp[i].Start_Date.toLocaleDateString('en-US',{year:'numeric', month:'short',
                  day:'2-digit', hour:'2-digit', minute:'2-digit'}); %>
              </td>
              <td>
                <%= eventmanagementapp[i].End_Date.toLocaleDateString('en-US',{year:'numeric', month:'short',
                  day:'2-digit', hour:'2-digit', minute:'2-digit'}); %>
              </td>
              <td>
                <%= eventmanagementapp[i].Location %>
              </td>
              <td><a href="/editEvent/<%= eventmanagementapp[i].Event_ID %>">Edit</a></td>
              <td><a href="/deleteEvent/<%= eventmanagementapp[i].Event_ID %>"
                  onclick="return confirm('Are you sure you want to delete ' +  `<%= eventmanagementapp[i].Title %>` + '?')">Delete</a>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>
</body>

</html>