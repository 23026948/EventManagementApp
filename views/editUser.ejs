<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Event Management App</title>
</head>

<body>
    <%- include('./partials/navbar') %>
    <div class="container">
        <br>
        <div class="text-center">
            <h2>Update Attendee</h2>
        </div>
        <br>
        <div class="text-center">
            <% if (user) { %>
                <form action="/editUser/<%= user.User_ID %>" method="POST" enctype="multipart/form-data">
                    <label for="Username">Username:</label><br>
                    <input type="text" id="Username" name="Username" value="<%= user.Username %>" required><br><br>

                    <label for="Email">Email:</label><br>
                    <input type="text" id="Email" name="Email" value="<%= user.Email %>" required><br><br>

                    <label for="DOB">Date of Birth:</label><br>
                    <input type="date" id="DOB" name="DOB" value="<%= user.DOB.toISOString().slice(0,10) %>" required><br><br>

                    <label for="Contact">Contact:</label><br>
                    <input type="text" id="Contact" name="Contact" value="<%= user.Contact %>" required><br><br>

                    <label for="Profile_Picture">Current Profile Picture:</label><br>
                    <input type="text" name="Profile_Picture" value="<%= user.Profile_Picture %>" disabled><br><br>
                    <img src="../images/<%= user.Profile_Picture %>" width="20%"><br><br>

                    New Profile Picture:<br>
                    <input type="file" id="Profile_Picture" name="Profile_Picture" accept="image/*"><br><br>

                    <button type="submit">Update Attendee</button>
                </form>
            <% } else { %>
                <p>No user found.</p>
            <% } %>
            <a href="/">Back</a>
        </div>
    </div>
</body>

</html>
